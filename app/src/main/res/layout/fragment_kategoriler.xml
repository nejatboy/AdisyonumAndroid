<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="100"
    tools:context=".View.Yonetici.GarsonlarFragment">

    <Spinner
        android:id="@+id/spinnerKategorilerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="4" />

    <Button
        android:id="@+id/buttonKategorilerFragmentKategoriEkle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button"
        android:text="Kategori Ekle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewKategorilerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="95" />
</LinearLayout>