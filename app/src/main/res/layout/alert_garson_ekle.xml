<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/editTextAlertGarsonEkleGarsonAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Garson Adı"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextAlertGarsonEkleGarsonKullaniciAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Garson Kullanıcı Adı"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextAlertGarsonEkleGarsonSifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Garson Şifre"
        android:inputType="number" />
</LinearLayout>