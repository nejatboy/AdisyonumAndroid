<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Controller.GarsonActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarGarsonActivitiy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <FrameLayout
        android:id="@+id/fragmentTutucuGarsonActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="99">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewGarsonActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:isScrollContainer="false"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/garson_bottom_navigation_view" />
</LinearLayout>